<div id="settings-dialog" style="display: none;">

  <div id="settings-tabs">

  	<ul>
        <li><a href="#user-interface">User interface</a></li>
        <li><a href="#agent-settings">Agent</a></li>
        <li><a href="#resource-settings">Resource</a></li>
		<li><a href="#testing" style="display: <%= (current_user.try(:admin?)) ? 'block' : 'none' %>">Testing</a></li>
	</ul>

    <div id="user-interface">
      <div>
        <input id="noticesVisible"  type="checkbox" checked="checked"/>
        <label for="noticesVisible">Show in-game notices</label>
      </div>
      <div>
        <input id="statusBarVisible"  type="checkbox" checked="checked"/>
        <label for="statusBarVisible">Show status bar</label>
      </div>
      <div>
        <input id="scrollingImageVisible"  type="checkbox" checked="checked"/>
        <label for="scrollingImageVisible">Show scrolling image</label>
      </div>
      <div>
        <input id="catastrophesVisible"  type="checkbox" checked="checked"/>
        <label for="catastrophesVisible">Show catastrophes</label>
      </div>
      <div>
        <input id="disableKeyboardShortcuts"  type="checkbox"/>
        <label for="disableKeyboardShortcuts">Disable keyboard shortcuts</label>
      </div>
      <div>
        <input id="soundsPlayable"  type="checkbox"/>
        <label for="soundsPlayable">Play sounds</label>
      </div>
      <div>
        <input id="useInlineResourceSwatch"  type="checkbox" />
        <label for="useInlineResourceSwatch">Show inline resource pop-up</label>
      </div>
      <div>
        <input id="allowInlinePanning"  type="checkbox" />
        <label for="allowInlinePanning">Allow inline panning</label>
      </div>
      <div>
        <input id="agentTracing"  type="checkbox"/>
        <label for="agentTracing">Show agent movement</label>

      </div>
      <div>
        <input id="hidePath"  type="checkbox"/>
        <label for="hidePath">Hide path</label>
      </div>
      <div>
        <input id="hidePathBorder"  type="checkbox"/>
        <label for="hidePathBorder">Hide path border</label>
      </div>
      <div>
        <input id="showGraph"  type="checkbox"/>
        <label for="showGraph">Show graph</label>
      </div>
      <div>
        <input id="makeSquare"  type="checkbox"/>
        <label for="makeSquare">Make world square</label>
      </div>
    </div>

  <div id="agent-settings">
    <div>
      <input id="agentsCanCommunicate"  type="checkbox" checked="checked"/>
      <label for="agentsCanCommunicate">Agents share their memories</label>
    </div>
    <div>
      <input id="agentsHaveRandomInitialHealth"  type="checkbox"/>
      <label for="agentsHaveRandomInitialHealth">Agents have random initial health</label>
    </div>
    <div>
      <input id="agentsCanAdjustSpeed"  type="checkbox"/>
      <label for="agentsCanAdjustSpeed">Agents can change their speed</label>
    </div>
    <div>
      <input id="agentsCanAdjustWander"  type="checkbox"/>
      <label for="agentsCanAdjustWander">Agents can wander</label>
    </div>
    <div>
      Health cost per move: <span id="agentCostPerMoveDisplay"></span>
      <br/>
      <div class="slider-component" id="agentCostPerMove"></div>
    </div>
  </div>

  <div id="resource-settings">
    <div>
      <input id="resourcesInTension"  type="checkbox"/>
      <label for="resourcesInTension">Resources affect neighbouring resources</label>
    </div>
    <div>
      <input id="resourcesInTensionGlobally"  type="checkbox"/>
      <label for="resourcesInTensionGlobally">Resources affect all other resources</label>
    </div>
    <div>
      <input id="ignoreResourceBalance"  type="checkbox"/>
      <label for="ignoreResourceBalance">Resource balance has no effect</label>
    </div>
    <div>
      <input id="applyGeneralHealth"  type="checkbox"/>
      <label for="applyGeneralHealth">Resource categories have no effect</label>
    </div>
    <div>
      <input id="resourcesDiminishAtFixedRates"  type="checkbox"/>
      <label for="resourcesDiminishAtFixedRates">Resources diminish at fixed rates</label>
    </div>
    <div>
      Rate of resource recovery: <span id="rateOfResourceRecoveryDisplay"></span>
      <br/>
      <div class="slider-component" id="rateOfResourceRecovery"></div>
    </div>
  </div>

  <div id="testing">
    <div>
      <input id="recording"  type="checkbox"/>
      <label for="recording">Record game</label>
    </div>
    <div>
      <input id="godMode"  type="checkbox"/>
      <label for="godMode">Play in 'god' mode</label>
    </div>
    <div>
      <input id="showHealthReductionInGodMode"  type="checkbox"/>
      <label for="showHealthReductionInGodMode">Show health reduction in 'god' mode</label>
    </div>
    <div>
      <input id="rivalsVisible"  type="checkbox"/>
      <label for="rivalsVisible">Show rivals</label>
    </div>
    <div>
      <input id="predatorsVisible"  type="checkbox"/>
      <label for="predatorsVisible">Show predators</label>
    </div>
    <div>
      <input id="tilesMutable"  type="checkbox"/>
      <label for="tilesMutable">Allow tiles to be added</label>
    </div>
    <div>
      <input id="tilesRemovable"  type="checkbox"/>
      <label for="tilesRemovable">Allow tiles to be removed</label>
    </div>
    <div>
      <input id="skewTiles"  type="checkbox"/>
      <label for="skewTiles">Skew level tiles</label>
    </div>
    <div>
      <input id="backgroundIconsVisible"  type="checkbox"/>
      <label for="backgroundIconsVisible">Show background icons</label>
    </div>
  </div>


  </div>


</div>
