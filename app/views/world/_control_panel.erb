<div id="controls">
  <h2>Control Panel</h2>
  <br/>

  <table>
    <tr>
      <td>
        <img src="/images/32/media-playback-start-3.png" id="startAgents" title="Play"/>
      </td>
      <td>
        <img src="/images/32/media-playback-pause-3.png" id="stopAgents" title="Pause"/>
      </td>
      <td>
        <img src="/images/32/media-seek-backward-3.png" id="slowDown" title="Slow down"/>
      </td>
      <td>
        <img src="/images/32/media-seek-forward-3.png" id="speedUp" title="Speed up"/>
      </td>
    </tr>
    <tr>
      <td>
        <img src="/images/32/document-new-5.png" id="newGame" title="New Game"/>
      </td>
      <td>
        <img src="/images/32/document-quick_restart.png" id="restartLevel" title="Restart Level"/>
      </td>
      <td>
        <img src="/images/32/games-config-theme.png" id="showResourceGallery" title="Resource Gallery"/>
      </td>
      <td>
        <%= link_to image_tag("/images/32/games-config-background.png", :title => "Level Gallery"), gallery_levels_path, :method => :get, :remote => true %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>

    <tr>
      <td></td>
      <td>
        <img src="/images/32/arrow-up-2.png" id="panUp"/>
      </td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td>
        <img src="/images/32/arrow-left-2.png" id="panLeft"/>
      </td>
      <td>
        <img src="/images/32/go-home-4.png" id="panReset"/>
      </td>
      <td>
        <img src="/images/32/arrow-right-2.png" id="panRight"/>
      </td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td>
        <img src="/images/32/arrow-down-2.png" id="panDown"/>
      </td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td>
        <img src="/images/32/zoom-out-3.png" id="zoomOut"/>
      </td>
      <td>
        <img src="/images/32/zoom-original-2.png" id="zoomReset"/>
      </td>
      <td>
        <img src="/images/32/zoom-in-3.png" id="zoomIn"/>
      </td>
      <td></td>
    </tr>
    <tr>
      <td colspan="4">
        <%= button_to "Level Editor", levels_path, :method => :get, :remote => true %>
      </td>
    </tr>
  </table>



  <br/>
  <div id="admin-controls" style="display: <%= (current_user.try(:admin?)) ? 'block' : 'none' %>">
      <h3>Admin functions:</h3>
      <br/>
      <strong>Developmental:</strong>
      <br/>
      God mode: <input id="godModeInput" name="godModeInput" type="checkbox"/>
      <br/>
      (then click 'New game', and 'Start')
      <br/>
      <button id="debug">Debug</button>
      <br/>
  </div>
  <br/>
</div>
