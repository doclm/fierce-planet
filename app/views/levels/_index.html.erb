<h1>Listing levels</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @levels.each do |level| %>
      <tr>
        <td><%= level.name %></td>
        <td><%= link_to 'Edit', edit_level_path(level), :remote => true %></td>
        <td><%= link_to 'Destroy', level, :confirm => 'Are you sure?', :method => :delete, :remote => true %></td>
      </tr>
  <% end %>
</table>

