

$('#notifications').html("<p>Creating a new level...</p>");

if (FiercePlanet.levelListDialog != undefined)
    FiercePlanet.levelListDialog.dialog('close');

$(".edit_level_properties").remove();



FiercePlanet.editPropertiesDialog = $('<div></div>')
        .html("<%=  escape_javascript(render('levels/edit_properties', :locals => { :level => @level})) %>")
        .dialog({
                    position: [FiercePlanet.calculateWorldLeft(), FiercePlanet.calculateWorldTop()],
                    width: FiercePlanet.WORLD_WIDTH + 7,
                    height: FiercePlanet.WORLD_HEIGHT + 7,
                    autoOpen: false,
                    modal: true,
                    title: 'Level Setup',
                    buttons: {
                        "Save Level": function() {
                            $(".edit_level_properties").submit();
                            FiercePlanet.drawGame();
                            $(this).dialog("close");
                        },
                        "Cancel": function() {
                            $(this).dialog("close");
                        }
                    },
                    open: function() {
                        $("#edit-properties-tabs").tabs();
                    }

                });
FiercePlanet.editPropertiesDialog.dialog('open');