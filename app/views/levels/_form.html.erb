<%= form_for(@level, :remote => true) do |f| %>
    <% if @level.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@level.errors.count, "error") %> prohibited this level from being saved:</h2>

          <ul>
            <% @level.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <% unless @level.id %>
    <div class="field">
      <%= f.label :world_width %>
      <br/>
      <%= f.select :world_width, 5.upto(20) %>
    </div>
    <div class="field">
      <%= f.label :world_height %>
      <br/>
      <%= f.select :world_height, 5.upto(20) %>
    </div>
    <% end %>
    <div class="field">
      <%= f.label :initial_agent_number %>
      <br/>
      <%= f.select :initial_agent_number, 1.upto(20) %>
    </div>
    <div class="field">
      <%= f.label :wave_number %>
      <br/>
      <%= f.select :wave_number, 1.upto(20) %>
    </div>
    <div class="field">
      <%= f.label :expiry_limit %>
      <br/>
      <%= f.select :expiry_limit, 1.upto(20) %>
    </div>
    <div class="field">
      <%= f.label :allow_offscreen_cycling %>
      <br/>
      <%= f.check_box :allow_offscreen_cycling %>
    </div>
    <div class="field">
      <%= f.label :allow_patches_on_path %>
      <br/>
      <%= f.check_box :allow_patches_on_path %>
    </div>
    <div class="field">
      <%= f.label :notice %>
      <br/>
      <%= f.text_area :notice, :rows => 5 %>
    </div>


    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
