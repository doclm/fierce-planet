<%= form_for(@profile, :remote => true) do |f| %>
    <% if @profile.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

          <ul>
            <% @profile.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :nickname %>
      <br/>
      <%= f.text_field :nickname %>
    </div>
    <div class="field">
      <%= f.label :profile_class %>:
      <%= @profile.profile_class %>
    </div>
    <div class="field">
      <%= f.label :progress_towards_next_class %>:
      <%= @profile.progress_towards_next_class %>
    </div>
    <div class="field">
      <%= f.label :credits %>:
      <%= @profile.credits %>
    </div>
    <div class="field">
      <%= f.label :capabilities %>:
      <%= (@profile.capabilities).join(',') %>
    </div>

    <h2>Vital statistics</h2>

    <div class="field">
      <%= f.label :total_saved %>:
      <%= @profile.total_saved %>
    </div>
    <div class="field">
      <%= f.label :total_expired %>:
      <%= @profile.total_expired %>
    </div>
    <div class="field">
      <%= f.label :total_resources_spent %>:
      <%= @profile.total_resources_spent %>
    </div>

    <div class="field">
      <%= f.label :current_score %>: <%= @profile.current_score %>
    </div>
    <div class="field">
      <%= f.label :highest_score %>: <%= @profile.highest_score %>
    </div>
    <div class="field">
      <%= f.label :current_level %>: <%= @profile.current_level %>
    </div>
    <div class="field">
      <%= f.label :highest_level %>: <%= @profile.highest_level %>
    </div>

<% end %>
