<!DOCTYPE html>
<html>
<head>
  <title>Fierce Planet</title>
  <!--<link href="http://code.google.com/apis/maps/documentation/javascript/examples/default.css" rel="stylesheet" type="text/css" />-->
  <%= stylesheet_link_tag "styles" %>
  <%= stylesheet_link_tag "smoothness/jquery-ui-1.8.11.custom" %>

  <%= javascript_include_tag "jquery.min.js" %>
  <%= javascript_include_tag "jquery-ui.min.js" %>
  <%= javascript_include_tag "jquery.json-2.2.min.js" %>
  <%= javascript_include_tag "jquery.mousewheel.3.0.2/jquery.mousewheel.min.js" %>
  <%= javascript_include_tag "jquery.zoomEvent.js" %>

  <%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? -%>
  <%= javascript_tag "var PROFILE_ID;" -%>
  <%= javascript_tag "PROFILE_ID = #{current_user.profile.id};" if current_user -%>

  <%= javascript_include_tag "rails" %>

  <%= javascript_include_tag "agents/framework/agent" %>
  <%= javascript_include_tag "agents/framework/level" %>
  <%= javascript_include_tag "agents/framework/resource" %>
  <%= javascript_include_tag "agents/framework/player_class" %>
  <%= javascript_include_tag "agents/framework/tile" %>

  <%= javascript_include_tag "agents/framework/classes" %>
  <%= javascript_include_tag "agents/data/resource_kinds" %>
  <%= javascript_include_tag "agents/data/player_classes" %>
  <%= javascript_include_tag "agents/data/agent_types" %>
  <%= javascript_include_tag "agents/game" %>
  <%= javascript_include_tag "agents/data/levels" %>
  <%= javascript_include_tag "agents/level_editor" %>

  <% if current_user %>
      <script>
          profileClass = '<%= current_user.profile.profile_class ? current_user.profile.profile_class : "Novice" %>';
          credits = parseInt('<%= current_user.profile.credits ? current_user.profile.credits : 0 %>');
          capabilities = '<%= current_user.profile.capabilities ? current_user.profile.capabilities : "farm,water,clinic" %>'.split(',');
          totalSaved = parseInt('<%= current_user.profile.total_saved ? current_user.profile.total_saved : 0 %>');
          $(document).ready(function() {
              refreshSwatch();
          });
      </script>
  <% end %>
  <%= csrf_meta_tag %>
  <script>
    $(window).live("documentzoomed",function(){
        alert('the document has zoomed!');
    });

  </script>

</head>
<body>



<div id="left-pane">
  <p></p>
</div>
<div id="content-pane">

  <%= yield %>
</div>
<div id="right-pane">
  <p></p>
</div>

</body>
</html>
