<div id="world">

  <h2>Sign in</h2>

  <div id="local" class="box">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <p><%= f.label :email %><br/>
          <%= f.text_field :email %></p>

        <p><%= f.label :password %><br/>
          <%= f.password_field :password %></p>

        <% if devise_mapping.rememberable? -%>
            <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
        <% end -%>

        <p><%= f.submit "Sign in" %></p>
    <% end %>
  </div>

  <div id="remote">
    <!--<div id="terms" class="box">-->
      <!--<%= link_to "Terms of Service", "#" %>-->
    <!--</div>-->
    <div id="services" class="box">
      Sign in with:
      <% link_to user_omniauth_authorize_path(:facebook) do %>
          <image src="/images/intridea-authbuttons/png/facebook_32.png" alt="Facebook" />
          Facebook
      <% end %>
      <% link_to user_omniauth_authorize_path(:google) do %>
          <image src="/images/intridea-authbuttons/png/google_32.png" alt="Google" />
          Google
      <% end %>

      <!--<a href="/auth/facebook" class="services"><image src="/images/intridea-authbuttons/png/facebook_32.png" alt="Facebook" />-->
        <!--Facebook</a>-->
